    "rollup": "^4.41.0",
    "rollup-plugin-dts": "^6.2.1",
    "rollup-plugin-visualizer": "^5.14.0",
    "ts-jest": "^29.3.4",
    "tslib": "^2.8.1",
    "typescript": "^5.8.3"
  },
  "homepage": "https://github.com/your-username/ts-utility-stash#readme",
  "bugs": {
    "url": "https://github.com/your-username/ts-utility-stash/issues"
